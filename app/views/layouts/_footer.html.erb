<footer>
  <div class="container">

    <div class="row">
      <% if not user_signed_in? || admin_signed_in? %>
        <span class="move-top" id="move-top-guest-btn">
          <%= link_to "ゲストログイン（会員）", users_guest_sign_in_path, method: :post, class:'btn btn-outline-dark py-1' %>
        </span>
        <span class="move-top" id="move-top-admin-btn">
          <%= link_to "ゲストログイン（管理者）", admin_guest_sign_in_path, method: :post, class:'btn btn-outline-dark py-1' %>
        </span>
      <% end %>
      <a class="move-top" id="move-top-arrow" href="#">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-up-square" viewBox="0 0 16 16">
