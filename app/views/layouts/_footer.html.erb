    </div>

    <div class="row">
      <div class="mx-auto mt-3 text-center d-flex">
          <%= link_to "home", root_path, class:'mb-2' %>
          <% if not admin_signed_in? %>
            <%= link_to "form", form_inquiries_path, class:'fas fa-envelope m-0 pl-2 mb-2' %>
          <% end %>
      </div>
    </div>

    <div class="row">
      <div class="mx-auto">
        <p id="copyright">Copyright © CookHub All Rights Reserved</p>
      </div>
    </div>

</footer>